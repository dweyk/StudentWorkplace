<Page x:Class="StudentWorkplace.Views.Schedules.ScheduleViewingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Schedule Crud Page"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding ScheduleViewingPageViewModel, 
                    Source={StaticResource ViewModelLocator}}">
    <Grid Background="White">
        <Image Source="/Resources/Image/background4.png" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <DataGrid ColumnWidth="*"
                  ItemsSource="{Binding Schedules, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False"
                  Margin="10,10,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование занятия:" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Дата занятия:" Binding="{Binding DateTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
